{
  "name": "frontier/module",
  "description": "Laravel Frontier Modules Package",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "laravel",
    "modules",
    "modular",
    "frontier"
  ],
  "authors": [
    {
      "name": "Mohamed Khedr",
      "email": "0xkhdr@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "internachi/modular": "^2.0"
  },
  "require-dev": {
    "laravel/pint": "^1.22",
    "orchestra/testbench": "^9.0|^10.0",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0",
    "rector/rector": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "Frontier\\Modules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Frontier\\Modules\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test:coverage": "vendor/bin/pest --coverage",
    "lint": "vendor/bin/pint",
    "lint:test": "vendor/bin/pint --test",
    "rector": "vendor/bin/rector process",
    "rector:dry": "vendor/bin/rector process --dry-run"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Frontier\\Modules\\Providers\\ServiceProvider"
      ]
    }
  }
}